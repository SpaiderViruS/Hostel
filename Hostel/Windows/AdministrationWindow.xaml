<Window x:Class="Hostel.Windows.AdministrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hostel.Windows"
        mc:Ignorable="d"
        Title="Меню администратора" Height="400" Width="400"
        MinHeight="375" MinWidth="375"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Меню администратора гостиницы" VerticalAlignment="Center" FontSize="24" HorizontalAlignment="Center"/>

        <Button x:Name="RegistrationButton" Content="Зарегистрировать гостя" Grid.Row="1" Click="RegistrationButton_Click"/>
        <Button x:Name="CheckReservationsButton" Content="Посмотреть заяки" Grid.Row="2" Click="CheckReservationsButton_Click"/>
    </Grid>
</Window>
